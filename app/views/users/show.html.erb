	<h2> <%=@user.login%> Jobs Response Time </h2>
	<div class="chart" id="user_response_time"> </div> <br />
	<h2> <%=@user.login%> Jobs Estimated Response Time </h2>
	<div class="chart" id="user_est_time"> </div> <br />
	<h2> <%=@user.login%> Jobs Completed Time </h2>
	<div class="chart" id="user_completed_time"> </div> <br />
	<h2> <%=@user.login%>'s Jobs Per Day </h2>
	<div class="chart" id="user_jobs_day"> </div> <br />
	<h2> <%=@user.login%>'s Speed Ratings </h2>
	<div class="chart" id="user_speed"> </div> <br />
	<h2> <%=@user.login%>'s Quality Ratings </h2>
	<div class="chart" id="user_quality"> </div> <br />
</div>